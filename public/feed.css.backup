/* Feed Page Styles */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: linear-gradient(135deg, #990F4B, #020005);
  min-height: 100vh;
  padding: 20px;
  padding-bottom: 80px;
  color: #333;
}

.feed-container {
  max-width: 600px;
  margin: 0 auto;
}

.feed-header {
  text-align: center;
  margin-bottom: 20px;
  background: rgba(255, 255, 255, 0.95);
  padding: 15px;
  border-radius: 10px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.feed-header h1 {
  color: #333;
  font-size: 1.8rem;
  margin-bottom: 5px;
}

.feed-stats {
  color: #666;
  font-size: 0.9rem;
}

.feed-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15px;
  padding: 25px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.feed-section h2 {
  color: #333;
  font-size: 1.8rem;
  margin-bottom: 20px;
  text-align: center;
}

.photo-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

/* Social Media Feed Styles */
.main-feed {
  order: -1;
  /* Put social feed first */
}

.social-feed {
  display: flex;
  flex-direction: column;
  gap: 25px;
  max-width: 600px;
  margin: 0 auto;
}

.social-post {
  background: white;
  border-radius: 15px;
  overflow: hidden;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.social-post:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
}

.post-header {
  padding: 15px 20px;
  display: flex;
  align-items: center;
  gap: 12px;
  border-bottom: 1px solid #f0f0f0;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(135deg, #990F4B, #020005);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 1.1rem;
}

.post-user-info {
  flex: 1;
}

.post-username {
  font-weight: 600;
  color: #333;
  font-size: 1rem;
  margin-bottom: 2px;
}

.post-time {
  color: #666;
  font-size: 0.85rem;
}

.post-image-container {
  position: relative;
  width: 100%;
  max-height: 500px;
  overflow: hidden;
  cursor: pointer;
  background: #f8f9fa;
}

.post-image {
  width: 100%;
  height: auto;
  display: block;
  transition: transform 0.3s ease, filter 0.3s ease;
}

.post-image:hover {
  transform: scale(1.02);
  filter: brightness(1.05);
}

.post-content {
  padding: 15px 20px;
}

.post-caption {
  color: #333;
  font-size: 1rem;
  line-height: 1.5;
  margin-bottom: 12px;
}

.post-actions {
  display: flex;
  align-items: center;
  gap: 20px;
  padding: 0 5px;
}

.action-btn {
  background: none;
  border: none;
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 12px;
  border-radius: 20px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.95rem;
  color: #666;
  font-weight: 500;
}

.action-btn:hover {
  background-color: #f5f5f5;
  transform: scale(1.05);
}

.action-btn.liked {
  color: #e74c3c;
  font-weight: 600;
}

.action-btn.liked:hover {
  background-color: rgba(231, 76, 60, 0.1);
  transform: scale(1.05);
}

.feed-actions {
  display: flex;
  gap: 15px;
  justify-content: center;
  flex-wrap: wrap;
}

.cta-button.secondary {
  background: transparent;
  color: #990F4B;
  border: 2px solid #990F4B;
}

.cta-button.secondary:hover {
  background: #990F4B;
  color: white;
}

.users-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 15px;
  margin-top: 20px;
}

.photo-card {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  cursor: pointer;
}

.photo-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.photo-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.photo-info {
  padding: 15px;
}

.photo-caption {
  font-size: 1rem;
  color: #333;
  margin-bottom: 8px;
  line-height: 1.4;
}

.photo-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.9rem;
  color: #666;
}

.photo-user {
  font-weight: 600;
}

.photo-date {
  font-size: 0.8rem;
}

.photo-actions {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-top: 10px;
}

.like-btn {
  background: none;
  border: none;
  font-size: 1rem;
  cursor: pointer;
  padding: 5px 10px;
  border-radius: 20px;
  transition: background-color 0.3s ease;
}

.like-btn:hover {
  background-color: #f0f0f0;
}

.like-btn.liked {
  color: #e74c3c;
}

.like-count {
  font-size: 0.9rem;
  color: #666;
}

.user-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  text-align: center;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.user-card:hover {
  transform: translateY(-3px);
}

.user-email {
  font-size: 1.1rem;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
}

.user-stats {
  font-size: 0.9rem;
  color: #666;
  margin-bottom: 15px;
}

.follow-btn {
  background: linear-gradient(135deg, #990F4B, #020005);
  color: white;
  border: none;
  padding: 8px 20px;
  border-radius: 20px;
  font-size: 0.9rem;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.follow-btn:hover {
  opacity: 0.9;
}

.follow-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.loading {
  text-align: center;
  padding: 60px 40px;
  color: #666;
  font-size: 1.1rem;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20px;
  margin: 20px 0;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  position: relative;
}

.loading::before {
  content: "";
  display: inline-block;
  width: 40px;
  height: 40px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #990F4B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 15px;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

/* Bottom Navigation */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-top: 1px solid rgba(255, 255, 255, 0.2);
  padding: 15px 20px;
  z-index: 1000;
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
}

.bottom-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-decoration: none;
  color: #666;
  font-size: 0.9rem;
  font-weight: 500;
  padding: 8px 16px;
  border-radius: 12px;
  transition: all 0.3s ease;
  min-width: 70px;
}

.nav-item:hover {
  background: rgba(153, 15, 75, 0.1);
  color: #990F4B;
  transform: translateY(-2px);
}

.nav-item.active {
  background: linear-gradient(135deg, #990F4B, #020005);
  color: white;
  box-shadow: 0 4px 15px rgba(153, 15, 75, 0.3);
}

.empty-state {
  text-align: center;
  padding: 60px 40px;
  color: #666;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20px;
  margin: 20px 0;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.empty-icon {
  font-size: 4rem;
  margin-bottom: 20px;
  opacity: 0.7;
}

.empty-state h3 {
  color: #333;
  font-size: 1.5rem;
  margin-bottom: 10px;
  font-weight: 600;
}

.empty-state p {
  font-size: 1.1rem;
  margin-bottom: 30px;
  line-height: 1.5;
  color: #666;
}

.feed-actions {
  display: flex;
  gap: 15px;
  justify-content: center;
  flex-wrap: wrap;
}

.cta-button {
  display: inline-block;
  background: linear-gradient(135deg, #990F4B, #020005);
  color: white;
  text-decoration: none;
  padding: 14px 28px;
  border-radius: 30px;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  font-size: 1rem;
  box-shadow: 0 4px 15px rgba(153, 15, 75, 0.3);
}

.cta-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(153, 15, 75, 0.4);
}

.cta-button.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #990F4B;
  border: 2px solid #990F4B;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.cta-button.secondary:hover {
  background: #990F4B;
  color: white;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(153, 15, 75, 0.4);
}

/* Follow by Email Styles */
.follow-by-email {
  max-width: 600px;
  margin: 0 auto;
}

.email-input-container {
  display: flex;
  gap: 10px;
  margin-bottom: 20px;
}

.email-input {
  flex: 1;
  padding: 12px 15px;
  border: 2px solid #e0e0e0;
  border-radius: 25px;
  font-size: 1rem;
  outline: none;
  transition: border-color 0.3s ease;
}

.email-input:focus {
  border-color: #990F4B;
}

.email-input::placeholder {
  color: #999;
}

.follow-email-btn {
  background: linear-gradient(135deg, #990F4B, #020005);
  color: white;
  border: none;
  padding: 12px 25px;
  border-radius: 25px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: opacity 0.3s ease;
  white-space: nowrap;
}

.follow-email-btn:hover {
  opacity: 0.9;
}

.follow-email-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.follow-status {
  text-align: center;
  padding: 10px;
  border-radius: 8px;
  margin-bottom: 20px;
  font-weight: 500;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.follow-status.show {
  opacity: 1;
}

.follow-status.success {
  background-color: rgba(39, 174, 96, 0.1);
  color: #27ae60;
  border: 1px solid rgba(39, 174, 96, 0.3);
}

.follow-status.error {
  background-color: rgba(231, 76, 60, 0.1);
  color: #e74c3c;
  border: 1px solid rgba(231, 76, 60, 0.3);
}

.following-list h3 {
  color: #333;
  font-size: 1.3rem;
  margin-bottom: 15px;
  text-align: center;
}

.following-users {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 15px;
}

.following-user-card {
  background: white;
  border-radius: 12px;
  padding: 15px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
  border: 1px solid #f0f0f0;
}

.following-user-card:hover {
  transform: translateY(-2px);
}

.following-user-email {
  font-size: 1rem;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
  word-break: break-word;
}

.following-user-stats {
  font-size: 0.85rem;
  color: #666;
  margin-bottom: 12px;
}

.following-user-actions {
  display: flex;
  gap: 8px;
}

.unfollow-btn {
  background: #e74c3c;
  color: white;
  border: none;
  padding: 6px 15px;
  border-radius: 15px;
  font-size: 0.85rem;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.unfollow-btn:hover {
  opacity: 0.9;
}

.unfollow-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.view-profile-btn {
  background: transparent;
  color: #990F4B;
  border: 1px solid #990F4B;
  padding: 6px 15px;
  border-radius: 15px;
  font-size: 0.85rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.view-profile-btn:hover {
  background: #990F4B;
  color: white;
}

/* Modal Styles */
.modal {
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
}

.modal-content {
  position: relative;
  margin: 5% auto;
  max-width: 80%;
  max-height: 80%;
  background: white;
  border-radius: 15px;
  overflow: hidden;
}

.close {
  position: absolute;
  top: 15px;
  right: 20px;
  color: white;
  font-size: 28px;
  font-weight: bold;
  cursor: pointer;
  z-index: 1001;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close:hover {
  background: rgba(0, 0, 0, 0.7);
}

#modalImage {
  width: 100%;
  max-height: 70vh;
  object-fit: contain;
}

.modal-info {
  padding: 20px;
}

.modal-actions {
  display: flex;
  align-items: center;
  gap: 15px;
  margin-top: 15px;
}

#modalLikeBtn {
  font-size: 1.2rem;
}

.status-message {
  position: fixed;
  top: 20px;
  right: 20px;
  padding: 12px 20px;
  border-radius: 8px;
  color: white;
  font-weight: 600;
  z-index: 1000;
  transform: translateX(100%);
  transition: transform 0.3s ease;
}

.status-message.show {
  transform: translateX(0);
}

.status-message.success {
  background-color: #27ae60;
}

.status-message.error {
  background-color: #e74c3c;
}

/* Responsive Design */
@media (max-width: 768px) {
  body {
    padding: 15px;
    padding-bottom: 100px;
  }

  .feed-header h1 {
    font-size: 2rem;
  }

  .social-feed {
    max-width: 100%;
  }

  .photo-grid {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 15px;
  }

  .users-grid {
    grid-template-columns: 1fr;
  }

  .feed-sections {
    gap: 20px;
  }

  .feed-section {
    padding: 20px;
  }

  .post-header {
    padding: 12px 15px;
  }

  .post-content {
    padding: 12px 15px;
  }

  .user-avatar {
    width: 35px;
    height: 35px;
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  body {
    padding: 10px;
    padding-bottom: 100px;
  }

  .feed-container {
    max-width: 100%;
  }

  .social-feed {
    gap: 20px;
  }

  .photo-grid {
    grid-template-columns: 1fr;
  }

  .feed-header {
    padding: 15px;
  }

  .feed-header h1 {
    font-size: 1.8rem;
  }

  .feed-section {
    padding: 15px;
    margin: 0 -5px;
  }

  .social-post {
    border-radius: 12px;
  }

  .post-image-container {
    max-height: 400px;
  }

  .email-input-container {
    flex-direction: column;
    gap: 15px;
  }

  .email-input,
  .follow-email-btn {
    width: 100%;
  }

  .following-users {
    grid-template-columns: 1fr;
  }

  .modal-content {
    margin: 2% auto;
    max-width: 95%;
    max-height: 90%;
  }
}